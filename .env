# .env
# ================================================
# USER TABLE APPLICATION - ENVIRONMENT CONFIGURATION
# ================================================

# ===================
# API Configuration
# ===================
VITE_API_BASE_URL=https://randomuser.me/api
VITE_API_TIMEOUT=30000

# ===================
# App Configuration
# ===================
VITE_APP_NAME=User Management Dashboard
VITE_APP_VERSION=1.0.0

# ===================
# Cache Settings
# ===================
VITE_ENABLE_CACHE=true
VITE_CACHE_STALE_TIME=300000
VITE_CACHE_GC_TIME=600000

# ===================
# Pagination
# ===================
VITE_DEFAULT_PAGE_SIZE=15
VITE_MAX_RESULTS=1000

# ===================
# Feature Flags
# ===================
VITE_ENABLE_DRAG_DROP=true
VITE_ENABLE_EXPORT=true
VITE_ENABLE_SELECTION=true